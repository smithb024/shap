<UserControl x:Class="Shap.Icons.LetterIcon"
             Name="LetterIconUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shap.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{Binding BackgroundBrush, ElementName=LetterIconUserControl}">
        <Border BorderBrush="{Binding IconSelectedBrush, ElementName=LetterIconUserControl}"
                BorderThickness="2">
            <Label 
                Style="{StaticResource CentreLabel}"
                Content="{Binding Character, ElementName=LetterIconUserControl}"
                FontSize="12"
                Padding="0,3,0,0"
                HorizontalContentAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
