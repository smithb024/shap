<Window x:Class="Shap.StationDetails.MileageDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:details="clr-namespace:Shap.StationDetails"
        Background="{StaticResource StdBackground}"
        Title="MileageDetailsWindow"
        Height="450"
        Width="600">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0" LastChildFill="False">
      <ComboBox DockPanel.Dock="Left"
                Style="{StaticResource ComboBoxStyle}"
                ItemsSource="{Binding StnList}"
                Text="{Binding Stn}"
                Width="170"/>
      <Button DockPanel.Dock="Right"
              Content="Refresh"
              Style="{StaticResource StdButtonStyle}"
              Height="20"
              Margin="2"
              Width="80"/>
    </DockPanel>

    <ListBox ItemsSource="{Binding Routes}"
             HorizontalContentAlignment="Stretch"
             Background="{StaticResource StdBackground}"
             Grid.Row="1">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <details:MileageDetailsRow/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

  </Grid>
</Window>
