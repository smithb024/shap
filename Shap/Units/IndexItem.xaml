<UserControl x:Class="Shap.Units.IndexItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:shapConverter="clr-namespace:Shap.Common.Converters"
          mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <shapConverter:ServiceTypeBrushConverter x:Key="serviceTypeBrushConverter"/>
    </UserControl.Resources>

    <Border
            BorderBrush="{Binding InService, Converter={StaticResource serviceTypeBrushConverter}}"
            BorderThickness="7,2"
            CornerRadius="5"
            Grid.Row="0">
        <StackPanel>
            <Image 
                Height="67"
                Width="67"
                Source="{Binding IndexImagePath}"/>
            <Button 
            Grid.Row="1"
            Content="{Binding IndexName}"
            Width="67"
            Command="{Binding OpenWindowCmd}"
            Style="{StaticResource StdButtonStyle}"
            Height="20"
            Margin="0"/>
        </StackPanel>
    </Border>
</UserControl>