<UserControl x:Class="Shap.Locations.Views.RefreshView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shap.Locations.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Bottom">
        <Button Content="Refresh All" 
                        Command="{Binding Path=RefreshAllCommand}"
                        Style="{StaticResource StdButtonStyle}"
                        Height="20"
                        Width="80"
                        Margin="2"/>
        <Button Content="Refresh Visible" 
                        Command="{Binding Path=RefreshVisibleCommand}"
                        Style="{StaticResource StdButtonStyle}"
                        Height="20"
                        Width="80"
                        Margin="2"/>
    </StackPanel>
    
</UserControl>
